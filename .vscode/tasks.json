// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Sass Watch",
        "type": "shell",
        "command": "sass",
        "args": ["--watch", "client/css/style.scss", "client/generated/style.css"],
        "group": "build",
        "isBackground": true,
        "runOptions": {
            "runOn": "folderOpen"
        }
      },
      {
        "label": "Sass but Node",
        "type": "shell",
        "command": "node",
        "args": ["./node_modules/sass/sass", "--watch", "client/css/style.scss", "client/generated/style.css"],
        "group": "build",
        "isBackground": true,
        "runOptions": {
            "runOn": "folderOpen"
        }
      },
    ]
  }